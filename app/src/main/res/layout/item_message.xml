<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="@drawable/selector_item_clickable"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_msgDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin"
            android:text="发布时间："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_msgUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msgDate"
            android:layout_margin="@dimen/item_margin"
            android:text="发布人："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_msgTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msgUser"
            android:layout_margin="@dimen/item_margin"
            android:text="公告标题："
            android:textColor="@color/item_text" />

        <ImageView
            android:id="@+id/tv_MsgFlag"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_no_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</android.support.v7.widget.CardView>