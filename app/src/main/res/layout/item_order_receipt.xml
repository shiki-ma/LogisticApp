<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="@drawable/selector_item_clickable"
    app:cardCornerRadius="5dp"
    app:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/chk_selected"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tv_logisticCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="物流单号："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_ordCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_logisticCode"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="订单编号："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_deliveryCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordCode"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="配送单号："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_deliveryAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deliveryCode"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="配送地址："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deliveryAddr"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="收件人："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_ordTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipient"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="联系电话："
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_exprItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordTel"
            android:layout_margin="@dimen/item_margin"
            android:layout_toRightOf="@id/chk_selected"
            android:text="快递物品："
            android:textColor="@color/item_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>