<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.std.logisticapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--添加可以向外拨打电话的权限  -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".LogisticApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/TranslucentAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LoginActivity"></activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="业务"></activity>
        <activity
            android:name=".ui.activity.MessageListActivity"
            android:label="公告信息"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity
            android:name=".ui.activity.MessageDetailActivity"
            android:label="公告详情"></activity>
        <activity
            android:name=".ui.activity.OrderReceiptActivity"
            android:label="配送单收单"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity
            android:name=".ui.activity.OrderScanActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.shiki.imgpicker.PhotoSelectActivity" />
        <activity android:name="com.shiki.imgpicker.PhotoPreviewActivity" />
        <activity
            android:name=".ui.activity.SignActivity"
            android:label="签收"></activity>
        <activity android:name=".ui.activity.DeliveryComplaintActivity"
            android:label="投诉处理"></activity>
        <activity
            android:name=".ui.activity.DeliveryComplaintListActivity"
            android:label="投诉信息"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity
            android:name=".ui.activity.DeliveryAppointmentActivity"
            android:label="预约修改"></activity>
        <activity
            android:name=".ui.activity.DeliveryDetailActivity"
            android:label="配送单详情"></activity>
    </application>

</manifest>
